  },
  "homepage": "https://github.com/maboroshi-inc/math-utils#readme",
  "devDependencies": {
    "@maboroshi/eslint-config": "^2.0.0",
    "@maboroshi/prettier-config": "^1.0.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.12.3",
    "eslint": "^6.6.0",
    "husky": "^4.0.10",
    "jest": "^24.8.0",
    "lint-staged": "^9.1.0",
    "prettier": "^1.17.1",
    "rollup": "^1.14.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-filesize": "^6.1.0",
