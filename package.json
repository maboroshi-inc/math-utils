{
  "name": "@maboroshi/math-utils",
  "version": "1.4.2",
  "description": "Common utilities of mathematics.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "doc": "typedoc --out ./docs --mode file --theme minimal",
    "lint": "tslint src/**/*.ts __tests__/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "prepublish": "npm run lint && npm run test && npm run build",
    "release": "release-it --no-npm.publish",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maboroshi-inc/math-utils.git"
  },
  "author": "Maboroshi Co., Ltd.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maboroshi-inc/math-utils/issues"
  },
  "homepage": "https://github.com/maboroshi-inc/math-utils#readme",
  "devDependencies": {
    "@maboroshi/prettier-config": "^1.0.0",
    "@maboroshi/tslint-config": "^1.0.1",
    "@types/jest": "^23.3.9",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "jest-junit": "^5.1.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3",
    "release-it": "^7.4.7",
    "rollup": "^0.67.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-filesize": "^5.0.1",
    "rollup-plugin-progress": "^0.4.0",
    "rollup-plugin-typescript2": "^0.17.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
